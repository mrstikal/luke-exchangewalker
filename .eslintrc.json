{
  "root": true,
  "ignorePatterns": ["!**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {
        "no-console": "off",
        "indent": ["error", "tab", {"SwitchCase": 1}],
        "comma-dangle": ["warn", "always-multiline"],
        "quotes": [2, "single", { "avoidEscape": true }]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    }
  ],
  "extends": ["plugin:@nx/react"]
}
